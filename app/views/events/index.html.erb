<h1 class="text-center my-5">Événements</h1>

<div class="container">
  <% @events.each do |event| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= event.title %></h5>
        <p class="card-text"><%= event.description.truncate(100) %></p>
        <p class="text-muted">
          <% if event.date.present? %>
            <%= event.date.strftime("%d/%m/%Y %H:%M") %>
          <% else %>
            Date non définie
          <% end %>
        </p>
      </div>
      <div class="card-footer text-center border-0 bg-transparent">
        <%= link_to 'Voir l\'événement', event_path(event), class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
